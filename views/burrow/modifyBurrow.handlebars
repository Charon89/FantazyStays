<div class="emptydiv">sdf</div>
<div class="modifyBurrow_outerWrap">
    <div class="modifyBurrow_innerWrap">
        <div class="modifyBurrow_content">
            <div class="img_div">
                {{!-- <img src="../img/uploads/{{burrowView.burrowPic}}" alt=""> --}}
                <img src="../../img/uploads/{{burrowView.burrowPic}}" alt="">
                <hr><br>
            </div>
            <div>
                <div class="errors">{{{errors}}}</div>
                <br>
                <form action="/burrow/modify/saveBurrow/{{burrowView._id}}?_method=PUT" method="post">
                    <div class="burrow_information_details">
                        <p>Title: </p>
                        <input type="text" name="modify_burrowTitle" class="modify_burrow" value="{{burrowView.title}}">
                        <p>Price: </p>
                        <input type="text" name="modify_burrowPrice" class="modify_burrow" value="{{burrowView.price}}">
                        <p>Location</p>
                        <select name="modify_burrowLocation" class="addBurrow_input_form">
                            <option value="Anywhere">Anywhere</option>
                            <option value="Winterspring">Winterspring</option>
                            <option value="Duskwood">Duskwood</option>
                            <option value="Westfall">Westfall</option>
                            <option value="Swamp of Sorrows">Swamp of Sorrows</option>
                        </select>
                        <p>Description: </p>
                        <textarea name="modify_burrowDescription" class="modify_burrow_textarea" cols="30"
                            rows="10">{{burrowView.description}}</textarea>
                        <div id="button_wrap">
                            <input type="submit" class="burrowModify_button" value="Engrave">
                            <a class="burrowModify_button" href="/burrow/burrowList">Exit</a>
                        </div>
                    </div>

            </div>
        </div>
    </div>